		"@sveltejs/kit": "^1.20.4",
		"@types/cookie": "^0.5.1",
		"@types/corestore__networker": "./@types/corestore__networker",
		"@types/hyperbee": "./@types/hyperbee",
		"@types/hypercore": "./@types/hypercore",
		"@types/hyperdrive": "./@types/hyperdrive",
		"@types/hyperswarm": "./@types/hyperswarm",
		"@types/hyperswarm__dht": "./@types/hyperswarm__dht",
		"@types/hyperswarm__secret-stream": "./@types/hyperswarm__secret-stream",
		"@types/typings": "./@types/typings",
		"@types/streamx": "./@types/streamx",
		"@types/lodash-es": "^4.17.6",
		"@types/node": "^18.11.18",
		"@types/polka": "^0.5.4",
		"@typescript-eslint/eslint-plugin": "^5.45.0",
		"@typescript-eslint/parser": "^5.45.0",
		"autoprefixer": "^10.4.13",
		"eslint": "^8.28.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-svelte": "^2.31.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"nodemon": "^2.0.20",
		"postcss": "^8.4.20",
		"postcss-load-config": "^4.0.1",
		"prettier": "^2.8.0",
