{
	"compilerOptions": {
		"baseUrl": ".",
		// "allowJs": true,
		// "checkJs": true,
		"moduleResolution": "node",
		"module": "esnext",
		"lib": [
			"esnext"
		],
		"target": "esnext",
		"isolatedModules": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"noImplicitAny": false,
		"strict": true,
		"paths": {
			"typings": [
				"../@types/typings"
			]
		}
	},
	"include": [
		"*.ts",
		"**/*.ts"
	]
	// "exclude": ["dmt.ts", "start.ts"]
}