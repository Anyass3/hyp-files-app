{
	"compilerOptions": {
		"baseUrl": ".",
		// "allowJs": true,
		// "checkJs": true,

		"moduleResolution": "node",
		"module": "esnext",
		"lib": ["esnext"],
		"target": "esnext",
		"isolatedModules": true,
		"resolveJsonModule": true,
		"sourceMap": false,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"paths": {
			"typings": ["../@types/typings"]
		}
	},
	"include": ["*.ts", "**/*.ts",]
	// "exclude": ["dmt.ts", "start.ts"]
}
